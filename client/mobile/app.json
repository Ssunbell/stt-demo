{
  "expo": {
    "name": "STT Demo Mobile",
    "slug": "stt-demo-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sttdemo.mobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "음성 인식을 위해 마이크 접근 권한이 필요합니다."
      }
    },
    "android": {
      "package": "com.sttdemo.mobile",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {},
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "음성 인식을 위해 마이크 접근 권한이 필요합니다."
        }
      ],
      "./app.plugin.js"
    ]
  }
}

